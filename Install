(welcome)
(set @default-dest "LIBS:")
(if (patmatch "(68000|68010)" (database "cpu"))
  (set cpu_ver 0)
  (set cpu_ver 1)
)
(set cpu_ver (askchoice
  (prompt "Which CPU version to install?")
  (help @askchoice-help)
  (choices "68000" "68020+")
  (default cpu_ver)
))
(if (= cpu_ver 0)
  (set libname "Libs/z.library.000")
  (set libname "Libs/z.library.020")
)
(copylib
  (prompt "Copying z.library")
  (help @copylib-help)
  (source libname)
  (dest @default-dest)
  (newname "z.library")
)
(exit)

